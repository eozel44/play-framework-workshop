# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                                     controllers.HomeController.index()


GET     /productArgs                                          controllers.HomeController.product(prodType:String,prodNum:Int)
GET     /product/:prodType/:prodNum                           controllers.HomeController.product(prodType:String,prodNum:Int)
GET     /productRE/$prodType<[a-z]{2}\d\d>/:prodNum           controllers.HomeController.product(prodType:String,prodNum:Int)


GET     /tasklist                           controllers.TaskList.taskList
GET     /login                              controllers.TaskList.login
GET     /validateLoginGet                    controllers.TaskList.validateLoginGet(username,password)
#cross origin turn off for now...
+nocsrf
POST    /validateLoginPost                   controllers.TaskList.validateLoginPost

+nocsrf
POST    /createUser                   controllers.TaskList.createUser
+nocsrf
GET    /logout                   controllers.TaskList.logout

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
